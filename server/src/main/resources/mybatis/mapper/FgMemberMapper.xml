<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "%7e//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="freshmanGuide.attendanceCheck.mapper.FgMemberMapper">
    <insert id="save" parameterType="freshmanGuide.attendanceCheck.DTO.BasicDTO$FgMemberInfoDTO">
        INSERT INTO fg_member_info
        VALUES (#{fgMemberId}, #{generation}, #{fgMemberName}, #{position}, #{state}, #{contact}, #{mail})
    </insert>

    <select id="findByFgMemberId"
            parameterType="Integer"
            resultType="freshmanGuide.attendanceCheck.DTO.BasicDTO$FgMemberInfoDTO"
    >
        SELECT fgMemberId, generation, fgMemberName, position, state, contact, mail
        FROM fg_member_info
        WHERE fgMemberId=${fgMemberId}
    </select>

    <update id="updateByFgMemberId"
            parameterType="freshmanGuide.attendanceCheck.DTO.BasicDTO$PutFgMemberInfoDTO"
    >
        UPDATE fg_member_info
        SET ${columnName}=#{value}
        WHERE fgMemberId=#{fgMemberId}
    </update>

    <delete id="deleteByFgMemberId" parameterType="Integer">
        DELETE FROM fg_member_info
        WHERE fgMemberId=${fgMemberId}
    </delete>

    <select id="findByGeneration"
            parameterType="Integer"
            resultType="freshmanGuide.attendanceCheck.DTO.BasicDTO$FgMemberInfoDTO"
    >
        SELECT *
        FROM fg_member_info
        WHERE generation=${generation}
    </select>

    <select id="findFgMemberInfoTableByGeneration"
            parameterType="Integer"
            resultType="freshmanGuide.attendanceCheck.DTO.BasicDTO$FgMemberTableInfoDTO"
    >
        SELECT S1.fgMemberId, generation, fgMemberName, position, state, contact, mail, isAdmin, registerApproval
        FROM
        (
            SELECT *
            FROM fg_member_info
            WHERE generation=${generation}
        ) AS S1
        LEFT JOIN
        (
            SELECT *
            FROM account_info
        ) AS S2
        ON S1.fgMemberId=S2.fgMemberId
    </select>

    <select id="findAll"
            resultType="freshmanGuide.attendanceCheck.DTO.BasicDTO$FgMemberInfoDTO"
    >
        SELECT *
        FROM fg_member_info
    </select>
</mapper>